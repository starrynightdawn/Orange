<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
    android:id="@+id/tabText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/home_fragmment"
    android:textSize="40dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#3299CC"
    ></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/regional_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/regional_division_data"
            android:layout_weight="1"></Spinner>
        <Spinner
            android:id="@+id/category_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/category_division_data"
            android:layout_weight="1"></Spinner>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"><ListView
       android:id="@+id/homeListview"
       android:layout_width="match_parent"
       android:layout_height="match_parent" >
   </ListView>
   </LinearLayout>




</LinearLayout>